{
  "name": "lastlink-shared",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/lastlink/shared/src",
  "prefix": "ll",
  "tags": ["layer:core"],
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/lastlink/shared/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/lastlink/shared/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/lastlink/shared/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/lastlink/shared/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/lastlink/shared/**/*.ts",
          "libs/lastlink/shared/**/*.html"
        ]
      }
    }
  }
}
