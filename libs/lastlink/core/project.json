{
  "name": "lastlink-core",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/lastlink/core/src",
  "prefix": "ll",
  "tags": ["layer:core"],
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/lastlink/core/ng-package.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "{workspaceRoot}/dist/{projectRoot}/libs/lastlink/core/assets",
            "output": "assets/lastlink/core"
          }
        ]
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/lastlink/core/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/lastlink/core/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/lastlink/core/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/lastlink/core/**/*.ts",
          "libs/lastlink/core/**/*.html"
        ]
      }
    }
  }
}
